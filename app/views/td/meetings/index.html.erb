<%= render "td/nav", title: "Activities Management" %>
<h1>Upcoming Activities</h1>
<p>
<% if @meetings&.length == 0 %>
 No upcoming activities.
<% else %>
  <table class="table table-sm table-striped">
    <%= render "tableheader" %>
    <%= render @meetings %>
  </table>
<% end %>
</p>

<h1>Create a New Activity</h1>
<%= render "form", meeting: [:td, Meeting.new], label: "create" %>

<% if @past_meetings.length > 0 %>
<h1 class="mt-3">Past Activities</h1>
<table class="table table-sm table-striped">
  <%= render "tableheader" %>
  <%= render @past_meetings %>
</table>
<% end %>
